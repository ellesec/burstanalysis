@article{Odawara2016856,
	title = "Induction of long-term potentiation and depression phenomena in human induced pluripotent stem cell-derived cortical neurons ",
	journal = "Biochemical and Biophysical Research Communications ",
	volume = "469",
	number = "4",
	pages = "856 - 862",
	year = "2016",
	note = "",
	issn = "0006-291X",
