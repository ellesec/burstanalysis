issn = {1662-5188},
journal = {Front. Comput. Neurosci.},
keywords = {action potential bursts,burst analy,burst analysis,developing,hescs,human embryonic stem cells,mea,microelectrode array,neuronal networks,spike trains},
pages = {38},
